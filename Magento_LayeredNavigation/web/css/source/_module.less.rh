//  Common
//  _____________________________________________

& when (@media-common = true) {
  .filter {
    &.block {
      margin-bottom: 0;
    }
    &-title {
      strong {
        display: none;
      }
    }
    .block-subtitle {
      border-bottom: @border-width__base solid @border-color__base;
      .lib-font-size(@h3__font-size);
      font-weight: @font-weight__semibold;
      line-height: 1em;
      padding: 0px 0px @indent__s;
      display: inline-block;
    }
    &-subtitle {
      width: 100%;
    }

    &-current {
      margin: 0;

      .items {
        padding: @indent__xs @indent__s;
      }

      .item {
        padding-left: 17px;
        position: relative;
        z-index: 1;
      }

      .filter &-subtitle {
        border: none;
        display: block;
        padding-bottom: @indent__s;
      }

      .action.remove {
        &:extend(.abs-remove-button-for-blocks all);
        left: -2px;
        position: absolute;
        top: -1px;
      }
    }
    &-actions {
      margin-bottom: @indent__m;
      padding: 0 @indent__s;
    }

    &-label {
      font-weight: @font-weight__bold;

      &:after {
        content: ': ';
      }
    }

    &-value {
      .lib-css(color, @text__color);
    }

    &-options {
      margin: 0;
      padding-top: 10px;

      &-item {
        border-bottom: @border-width__base solid @border-color__base;
        padding-bottom: @indent__s;
      }

      &-title {
        cursor: pointer;
        font-weight: @font-weight__semibold;
        margin: 0;
        overflow: hidden;
        padding: @indent__s @indent__s + 30px 0 @indent__s;
        position: relative;
        text-transform: uppercase;
        word-break: break-word;
        z-index: 1;

        .lib-icon-font(
          @_icon-font-content: @icon-down,
          @_icon-font-size: 30px,
          @_icon-font-position: after,
          @_icon-font-display: block
        );

        &:after {
          position: absolute;
          right: 13px;
          top: 0px;
        }

        &:hover {
          .lib-css(color, @text__color);
        }

        .active > & {
          .lib-icon-font-symbol(
            @_icon-font-content: @icon-up,
            @_icon-font-position: after
          );
        }
      }

      &-content {
        margin: 0;
        padding: 5px @indent__s;

        .item {
          margin: 0;
        }

        a {
          .lib-css(color, @text__color);
          margin-left: -5px;
          margin-right: -5px;
          padding-left: 5px;
          padding-right: 7px;

          &:visited {
            .lib-css(color, @text__color);
            text-decoration: none;
          }

          &:hover {
            background-color: @color-gray91;
            text-decoration: none;

            & + .count {
              background-color: @color-gray91;
            }
          }
        }

        .count {
          .lib-css(color, @text__color);
          font-weight: @font-weight__light;
          padding-left: 5px;
          padding-right: 5px;

          &:before {
            content: '(';
          }

          &:after {
            content: ')';
          }
        }

        .filter-count-label {
          &:extend(.abs-visually-hidden all);
        }
      }
    }
  }
}

